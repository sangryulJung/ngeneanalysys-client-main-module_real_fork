<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="100.0" prefWidth="450.0" stylesheets="@../css/common.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ngeneanalysys.controller.BatchChangeTierDialogController">
   <children>
      <VBox prefHeight="100.0" prefWidth="450.0">
         <children>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="60.0" prefWidth="450.0">
               <children>
                  <Label text="Comment">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="commentTextField" prefWidth="350.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="200.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="325.0" spacing="10.0">
                     <children>
                        <RadioButton fx:id="tierOneRadioButton" mnemonicParsing="false" text="T1">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                           <toggleGroup>
                              <ToggleGroup fx:id="tierToggle" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="tierTwoRadioButton" mnemonicParsing="false" text="T2" toggleGroup="$tierToggle" />
                        <RadioButton fx:id="tierThreeRadioButton" mnemonicParsing="false" text="T3" toggleGroup="$tierToggle" />
                        <RadioButton fx:id="tierFourRadioButton" mnemonicParsing="false" text="T4" toggleGroup="$tierToggle" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </HBox>
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#ok" styleClass="btn_setting_save" text="OK">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#cancel" styleClass="btn_setting_close" text="Cancel">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
